<section class="shopping-list">
  <h1>Shopping List</h1>
  <div class="details">
    <p>The amount of food items to buy: <%= @ingredients.length %></p>
    <p>The total value of food needed: $<%= @total_price %></p>
  </div>
  <div class="tables">
    <table>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @ingredients.each do |food, ingredients| %>
          <tr class="shop">
            <td><%= food %></td>
            <td>
              <% total_quantity = ingredients.map { |ingredient| ingredient.quantity.to_i }.sum %>
              <span><%= total_quantity %> <%= ingredients.first.food&.measurement_unit %></span>
            </td>
            <td>
              <% total_price = ingredients.map { |ingredient| (ingredient.quantity.to_i * ingredient.food.price.to_f) if ingredient.food&.price }.compact.sum %>
              $<%= total_price %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
